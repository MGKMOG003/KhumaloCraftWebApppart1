@page
@model KhumaloCraftWebApp.Pages.ContactModel
@{
    ViewData["Title"] = "Contact Us";
}

<h2>Contact Us</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="ContactMessage.Name"></label>
                <input asp-for="ContactMessage.Name" class="form-control" />
                <span asp-validation-for="ContactMessage.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContactMessage.Email"></label>
                <input asp-for="ContactMessage.Email" class="form-control" />
                <span asp-validation-for="ContactMessage.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContactMessage.Message"></label>
                <textarea asp-for="ContactMessage.Message" class="form-control"></textarea>
                <span asp-validation-for="ContactMessage.Message" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Send</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
